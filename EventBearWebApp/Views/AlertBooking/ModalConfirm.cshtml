@model BookingModel
@using (Html.BeginForm("UpdateBooking", "AlertBooking", FormMethod.Post))
{
  <!-- Modal ตกลงจอง-->
<div class="modal fade" id="ModalAlertBookConfirm1" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fof" id="ModalAlertBookConfirm1">เตือน!!!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="form-group col-md-12">
                <div class="form-row">
                    <div class="form-group fof col-md-6">
                        @Html.HiddenFor(Model => Model.Booking_ID, new { @class = "bookingID" })
                        @*@Html.HiddenFor(Model => Model.Customer_ID, new { @class = "customerID" })
                            @Html.HiddenFor(Model => Model.RoomAndZone_ID, new { @class = "roomAndZoneID" })*@
                        @Html.Label("สถานะ:")
                        @Html.TextBoxFor(Model => Model.Booking_Statua, new { @class = "form-control", placeholder = "เช่น รอว่างมัดจำ" })
                        @*@Html.Label("สถานะ:")
                            @Html.TextBoxFor(Model => Model.Booking_Statua, new { @class = "form-control", placeholder = "เช่น รอว่างมัดจำ" })*@

                        @Html.Label("วันเวลาที่จอง:")
                        @Html.TextBoxFor(Model => Model.Booking_Date, new { @class = "form-control", placeholder = "เช่น 2019-01-31" })

                        @Html.Label("ถึงวันเวลา:")
                        @Html.TextBoxFor(Model => Model.Booking_EndDate, new { @class = "form-control", placeholder = "เช่น 2019-01-31" })


                        @*<label for="input1">จำกัดช่วงเวลา:</label>
                            <input class="form-control" value="เช่น 12:00-14:00 น." type="text" onclick="this.select();" />*@
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary">ตกลง</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>                   
                </div>
            </div>

        </div>
    </div>
</div>

}