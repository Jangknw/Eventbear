@model  PlaceAndPlaceTypeModel

@{
    ViewBag.Title = "IndexSearchLo";
}

<div class="container-fluid">

    <div class="row matop">
        <div class="col-md-12">
            <h2 class="search NameEvent">ผลการค้นหา<i class="fa fa-search"></i> </h2>
        </div>
    </div>
</div>


<div class="container-fluid">   
    @using (Ajax.BeginForm("_PartialIndexSearchLo", "Search", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "_divPartialIndexSearchLo", InsertionMode = InsertionMode.Replace, OnComplete = "" }))
    {

        <div class="positionFixedLeft">
            <div class="card" style="width: 18rem; height:100%">
                <div class="card-body">

                    <div class="form-group">
                        @Html.DropDownListFor(Model => Model.PlaceType_ID, new SelectList(ViewBag.placetypename, "PlaceType_ID", "PlaceType_Name"), "ระบุประเภทสถานที่", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.DropDownListFor(Model => Model.Place_Province, new SelectList(ViewBag.provincename, "ID", "Name"), "ระบุจังหวัด", new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.DropDownListFor(Model => Model.Place_District, new SelectList(ViewBag.District, "ID", "Name"), "ระบุเขต/อำเภอ", new { @class = "form-control" })
                    </div>

                    <div class="divbutton">
                        <button type="submit" class="btn btn-dark btt">ค้นหา</button>
                    </div>

                </div>
            </div>
        </div>
    }
    <div id="_divPartialIndexSearchLo">
        @{Html.RenderAction("_PartialIndexSearchLo", "Search");}
    </div>


    <nav aria-label="Page navigation example">
        <ul class="pagination aa">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">6</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>


@section scripts {
    @Scripts.Render("~/bundles/scripts/Search")
}