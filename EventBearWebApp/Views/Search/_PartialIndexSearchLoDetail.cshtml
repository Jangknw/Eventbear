    function InsertFavorite(ID) {

        $.ajax({
            url: '@Url.Action("InsertFavorite")',
            type: 'POST',
            data: { id: ID },
            success: function (data) {

                //alert(data)

                //$('.item-box-' + ID).hide();
            },
            error: function (e) {
                alert(e);
            }
        });
    }

